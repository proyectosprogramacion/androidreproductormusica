<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.reproductor_musica_version5">
    <!-- Permisos para leer, escribir y grabar el audio -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Reproductor_musica_version5">
        <activity
            android:name=".ReproduccionMemoriaInterna"
            android:exported="false" />
        <activity
            android:name=".ReproduccionSDCARD"
            android:exported="false" />
        <activity
            android:name=".GrabacionAudio"
            android:exported="false" />
        <activity
            android:name=".ReproduccionCarpetaRaw"
            android:exported="false" />
        <activity
            android:name=".ReproduccionListView"
            android:exported="false" />
        <activity
            android:name=".EleccionReproduccion"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
