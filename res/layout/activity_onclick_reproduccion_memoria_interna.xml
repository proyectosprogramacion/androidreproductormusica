<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/portada"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".Onclik_ReproduccionMemoriaInterna">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:gravity="center"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/txtCancion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:padding="10dp"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:text="@string/canciones"
            android:textColor="@color/purple_700"
            android:textSize="27sp"
            android:textAlignment="center"
            android:textStyle="bold"
            >
        </TextView>
        <ImageView
            android:id="@+id/ivPortada"
            android:layout_marginBottom="8dp"
            android:src="@drawable/portada1"
            android:layout_width="150dp"
            android:layout_height="150dp">
        </ImageView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            >
            <SeekBar
                android:id="@+id/skBarra"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="40dp"
                android:layout_margin="20dp"
                ></SeekBar>

            <TextView
                android:id="@+id/txtStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="false"
                android:layout_centerInParent="true"
                android:layout_marginLeft="20dp"
                android:layout_toLeftOf="@+id/skBarra"
                android:text="0:00"
                android:textColor="@color/purple_700"
                android:textSize="14sp"></TextView>
            <TextView
                android:id="@+id/txtStop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/skBarra"
                android:layout_centerInParent="true"
                android:layout_alignParentRight="false"
                android:layout_marginRight="20dp"
                android:text="4:10"
                android:textColor="@color/purple_700"
                android:textSize="14sp"
                ></TextView>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <Button
                android:id="@+id/btPlay"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/ic_baseline_pause_24"
                >
            </Button>
            <Button
                android:id="@+id/btNext"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/ic_baseline_skip_next_24"
                android:layout_toRightOf="@id/btPlay"
                android:layout_marginTop="15dp"
                >
            </Button>
            <Button
                android:id="@+id/btPrev"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/ic_baseline_skip_previous_24"
                android:layout_toLeftOf="@id/btPlay"
                android:layout_marginTop="15dp"
                >
            </Button>
            <Button
                android:id="@+id/btAdelante"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/ic_baseline_fast_forward_24"
                android:layout_toRightOf="@id/btNext"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="15dp"
                >
            </Button>
            <Button
                android:id="@+id/btRebobinar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/ic_baseline_fast_rewind_24"
                android:layout_toLeftOf="@id/btPrev"
                android:layout_marginTop="20dp"
                android:layout_marginRight="15dp"
                >
            </Button>
        </RelativeLayout>


    </LinearLayout>

</LinearLayout>
